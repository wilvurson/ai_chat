generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Character {
  id           String    @id @default(nanoid())
  name         String
  description  String
  image        String
  basePrompt   String
  greetingText String
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  messages     Message[]
}

model Message {
  id          String    @id @default(nanoid())
  content     String
  role        String // 'model' , 'user'
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime  @default(now())
}

model User {
  id        String      @id @default(nanoid())
  email     String      @unique
  password  String
  messages  Message[]
  characters Character[]
  createdAt DateTime    @default(now())
}
