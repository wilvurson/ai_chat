generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Charecter {
  id String @id @default(nanoid())
  name String
  desciption String
  image String
  messages Message[]
}

model Message {
  id String @id @default(nanoid())
  contact String
  character Charecter @relation(fields: [characterid], references: [id])
  characterid String
}